@model AppMeteo.Models.Station

<div>
    <h4>Statistiques</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.Encode("Station")
        </dt>
        <dd>
            @Html.DisplayFor(model=>model.CodePostal)
        </dd>
        <dt>
            @Html.Encode("Pays")
        </dt>
        <dd>
           @Html.DisplayFor(model => model.Pays.Nom)
        </dd>
    </dl>
   
    @using (Html.BeginForm())
    {

        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.Label("Date initiale", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Date", (SelectList)ViewBag.SelectListDates, "Sélectionner une date initiale")
                </div>
            </div>

            <div class="form-group">
                @Html.Label("Date finale", new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.DropDownList("Date", (SelectList)ViewBag.SelectListDates, "Sélectionner une date finale")
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
</div>
